import locale
locale.setlocale(locale.LC_ALL, "")

import os
import sys
sys.path.insert(0, """@pythondir@""")

import pygtk
pygtk.require("2.0")
import glib

import idjc
import idjc.prelims

# Problems occur when using a bash alias to compile IDJC.
# -bash is not a valid command line switch for this application.
not_compiling = len(sys.argv) != 2 or sys.argv[1] != "-bash"


if not_compiling:
   idjc.prelims.ArgumentParser(sys.argv[1:])
   idjc.prelims.set_config_dir(os.path.join(
                                 glib.get_user_config_dir(), "idjc"))
   #idjc.prelims.ProfileSelector(allow_gui=True)
